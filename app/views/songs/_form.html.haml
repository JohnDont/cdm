.holder-upload-form
  = simple_form_for(song, remote: true) do |f|
    %h2 Publish your track to CDM

    = f.error_notification

    .form-inputs
      %span.hint
        %i *
        Enter the link of your track from Youtube or Soundcloud
      = f.input :url, placeholder: 'http://yourlink', label: false

      %span.hint
        %i *
        Select category genre
      - grouped_options = [['Group 1',["Item 1", "Item 2", "Item 3"]], ['Group 2', ["Item 1", "Item 2", "Item 3", "Item 4"]]]
      .input.select.required.song_category
        = f.select :category_id, grouped_options_for_select(Category.group_parents), include_blank: 'Select category genre'

    .form-actions.text-right
      = f.button :submit, "Submit"
