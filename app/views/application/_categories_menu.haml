.container.container-categories
  .container.holder-categories-filter
    .row
      .col-xs-10.categories-menu
        %ul.clearfix.categories
          - Category.all.in_groups_of(6, false).each do |cats|
            %li
              - cats.each do |cat|
                .holder
                  = link_to cat.name, explore_category_path(cat, params.slice(:top, :sort)), class: (params[:category] == cat.slug ? 'active' : '')
                  - if params[:category] == cat.slug
                    = link_to 'x', explore_path(params.slice(:top, :sort)), class: 'remove'


      .col-lg-2.extra-menu
        %ul
          %li
            = link_to '#', class: 'about' do
              %i.icon.icon-logo-small
              About
          %li
            = link_to '#', class: 'blog' do
              %i.icon.icon-blog
              Blog
          %li
            = link_to '#', class: 'facebook' do
              %i.icon.icon-facebook-small
              Facebook
          %li
            = link_to '#', class: 'instagram' do
              %i.icon.icon-instagram-small
              Instagram
          %li
            = link_to '#', class: 'soundcloud' do
              %i.icon.icon-soundcloud-small
              Soundcloud
          - if user_signed_in?
            %li= link_to "Logout", destroy_user_session_path
