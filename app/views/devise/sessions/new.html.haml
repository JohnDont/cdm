.holder-devise-form
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2 Login

    = link_to user_omniauth_authorize_path(:facebook), class: 'facebook-sign-in' do
      %span.text
        %i.icon.icon-fb
        Connect Using Facebook

    .form-inputs
      = f.input :email, required: false, autofocus: true, placeholder: "Email address", label: false
      = f.input :password, required: false, placeholder: "Password", label: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Login"

    = render "devise/shared/links"
