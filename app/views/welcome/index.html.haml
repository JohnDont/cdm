- unless user_signed_in?
  = content_for :slider do
    = render partial: 'welcome/slider'

- else
  .row
    .col-xs-12
      .music-charts
        = link_to "Latest Music", root_path(reload: true), remote: true,  class: "cdm-btn latest #{params[:top] ? '' : 'active'}"
        = link_to "Top Charts", root_path(reload: true, top: true), remote: true, class: "cdm-btn top #{params[:top] ? 'active' : ''}"
  .infinite-songs
    .row.m-t-20
      .holder-songs
        - @songs.each_with_index do |song, index|
          = render partial: 'welcome/song_item', locals: {song: song, index: index}

    .row.m-t-20
      .pagination
        = link_to_next_page @songs, 'Next Page', remote: true, params: params.slice(:top)
